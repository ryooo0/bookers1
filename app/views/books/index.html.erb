<div class="index-message">
  <% if flash[:notice] %>
    <b id="notice">
      <%= flash[:notice] %>
    </b>
  <% end %>
</div>

<div class="index-header">
  <b>Books</b>
</div>


<table class="index-main">
  <thead class="index-main-topic">
    <tr>
      <th class="index-main-title"><b>Title</b></th>
      <th class="index-main-body"><b>Body</b></th>
      <th class="index-main-blank"></th>
    </tr>
  </thead>

  <tbody class="index-main-box">
    <% @books.each do |book| %>
    <tr class="index-main-line">
      <td class="index-main-titlebox"><%= book.title %></td>
      <td class="index-main-bodybox"><%= book.body %></td>
      <td class="index-main-buttonbox"><%= link_to "Show", book_path(book.id) %></td>
      <td class="index-main-buttonbox"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="index-main-buttonbox"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<div class="index-postname">
  <b>New book</b>
</div>

<div class="index-errormessage">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved.
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>


<div calss="index-post">
  <%= form_with model: @book, url:'/books', local:true do |f| %>
    <div class="index-post-title">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="index-post-body">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="index-post-button">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>

