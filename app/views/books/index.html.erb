<div class="index-message">
  <% if flash[:notice] %>
    <b id="notice">
      <%= flash[:notice] %>
    </b>
  <% end %>
</div>

<div class="index-header">
  <b>Books</b>
</div>


<table class="index-main">
  <thead class="index-main-topic">
    <tr>
      <th class="index-main-title"><b>Title</b></th>
      <th class="index-main-body"><b>Body</b></th>
      <th class="index-main-blank"></th>
    </tr>
  </thead>

  <tbody class="index-main-box">
    <tr class="index-main-line">
      <td class="index-main-titlebox">
        <% @book.each do |book| %>
          <p><%= book.title %></p>
        <% end %>
      </td>

      <td class="index-main-bodybox">
        <% @book.each do |book| %>
          <p><%= book.body %></p>
        <% end %>
      </td>

      <td class="index-main-buttonbox">
        <% @book.each do |book| %>
          <p><%= link_to "Show", post_path(book.id) %></p>
        <% end %>
      </td>
      <td class="index-main-buttonbox">
        <% @book.each do |book| %>
          <p><%= link_to "Edit", edit_post_path(book.id) %></p>
        <% end %>
      </td>
      <td class="index-main-buttonbox">
        <% @book.each do |book| %>
          <p><%= link_to "Destroy", destroy_post_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></p>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>


<div class="index-postname">
  <b>New book</b>
</div>





<div calss="index-post">
  <%= form_with model: @book, url:'/books', local:true do |f| %>
    <div class="index-post-title">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="index-post-body">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="index-post-button">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>

