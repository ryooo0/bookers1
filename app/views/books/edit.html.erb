<div class="edit-header">
  <b>Editing Book</b>
</div>

<div class="edit-message">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved.
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</div>

<%= form_with model:@book, url:"/posts/#{@book.id}", local:true do |f| %>
  <div class="index-post-title">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="index-post-body">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <div class="index-post-button">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div class="edit-link">
  <p class="edit-link-show"><%= link_to "Show", post_path(@book.id) %></p>
  <p class="edit-link-line">|</p>
  <p class="edit-link-back"><%= link_to "Back", :books %></p>
</div>

