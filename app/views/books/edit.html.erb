<div class="edit-header">
  <b>Editing Book</b>
</div>

<div class="edit-message">
  <b>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved.
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  
</div>

<div class="edit-form">
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <div class="edit-post-title">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="edit-post-body">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    <div class="edit-post-button">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
</div>

<div class="edit-link">
  <p class="edit-link-show"><%= link_to "Show", book_path(@book.id) %></p>
  <p class="edit-link-line">|</p>
  <p class="edit-link-back"><%= link_to "Back", :books %></p>
</div>

